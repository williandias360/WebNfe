<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/grid")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    <div class="navbar">

    </div>

    <div id="Conteudo">
        <div id="AreaMenu">
            <ul id="Lista">
                <li id="Home">@Html.ActionLink("Página Inicial", "Index", "Home")</li>
                <li id="Pessoa">@Html.ActionLink("Clientes", "Index", "Clientes")</li>
                <li>Fornecedores</li>
                <li>Configurações</li>
                <li>Emissão de nota</li>
                <li>Relatórios</li>
                <li>Sair</li>
            </ul>
        </div>
        <div id="AreaPaginas">
            @RenderBody()
            <footer>
                <p>&copy; @DateTime.Now.Year - Meu Aplicativo ASP.NET</p>
            </footer>
        </div>
    </div>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/areas")
    @Scripts.Render("~/bundles/grid")
    @RenderSection("scripts", required: false)
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
</body>
</html>
